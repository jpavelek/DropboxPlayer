<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/text_margin"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        android:shrinkColumns="1"
        android:layout_marginRight="@dimen/context_menu_icon_placeholder_width">
        <TableRow>
            <TextView
                android:id="@+id/textView_song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/dbp_list_title"
                android:layout_span="2"
                tools:text="La Ritournelle"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView_song_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/dbp_list_detail"
                tools:text="Sebastian Tellier"/>
            <TextView
                android:id="@+id/textView_song_playtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textSize="@dimen/dbp_list_detail"
                tools:text="2:34"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
